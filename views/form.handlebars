<head>
    <link rel="stylesheet" href="/css/form.css" type="text/css" /> 
</head>

<body>
    <div id="navbar">
        <ul class="nav">
            <li class="navLI"><a href="/" target="_self">Home</a></li>
            <li class="navLI"><a href="/about" target="_self">About Me</a></li>
            <li class="navLI"><a href="/blog" target="_self">Blog</a></li>
            <li class="navLI"><a href="/updates" target="_self" class="active">Updates</a></li>
        </ul>
    </div>

    <div id="form-page-body">

        <div id="signup-form">
            <form action="/updates/signup" method="POST" target="_self">
                <fieldset>
                    <legend>Sign up to receive email updates about The Lucky Carrot!</legend>
                    <br>
                    <label for="First Name">First Name:</label>
                    <input type="text" id="First Name" name="First Name" placeholder="Bark" required>
                    <br>
                    <label for="Last Name">Last Name:</label>
                    <input type="text" id="Last Name" name="Last Name" placeholder="Twain" required>
                    <br>
                    <label for="Email">Email:</label>
                    <input type="email" id="Email" name="Email" placeholder="barktwain@woof.com" required>
                    <br>
                    <label for="Frequency">Update Frequency:</label>
                    <select name="Frequency" id="freq">
                            <option value="daily">Every Day! </option>
                            <option value="weekly">Every Week!</option>
                            <option value="monthly">Every Month!</option>
                    </select>

                    <input type="submit" name="Submit" id="submit">
                </fieldset>
            </form>
        </div>
        
        <br>

        <div id="scrollbox" class="hidden">
            <p>Thank you for signing up to receive pupdates! You submit the following:</p>
            <br>
            {{#each postResponse}}
            <p>{{this.name}} : {{this.value}}</p>
            {{/each}}
            
        </div>
    </div>
</body>